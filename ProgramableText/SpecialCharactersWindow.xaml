<Window x:Class="ProgramableText.SpecialCharactersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgramableText"
        mc:Ignorable="d"
        Title="SpecialCharactersWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="SpListBox" HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" VerticalAlignment="Top" Width="236" SelectionChanged="ListBox_SelectionChanged"/>
        <TextBox x:Name="CodeOutput" HorizontalAlignment="Left" Height="23" Margin="251,10,0,0" TextWrapping="Wrap" Text="CodeOutput" VerticalAlignment="Top" Width="278"/>
        <TextBox x:Name="TextInput" HorizontalAlignment="Left" Height="153" Margin="251,38,0,0" TextWrapping="Wrap" Text="TextInput" VerticalAlignment="Top" Width="278" AcceptsReturn="True" TextChanged="TextInput_TextChanged"/>
        <TextBox x:Name="TextOutput" HorizontalAlignment="Left" Height="153" Margin="251,196,0,0" TextWrapping="Wrap" Text="TextOutput" VerticalAlignment="Top" Width="278" AcceptsReturn="True"/>

    </Grid>
</Window>
